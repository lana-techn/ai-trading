# AI Trading Agent Backend Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=4320
ALGORITHM=HS256

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost/traderai

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
QWEN_MODEL_PATH=Qwen/Qwen2.5-Coder-32B-Instruct
USE_LOCAL_QWEN=false

# Data Sources
ALPHA_VANTAGE_KEY=your-alpha-vantage-key-here
TWELVE_DATA_KEY=your-twelve-data-key-here

# Trading Configuration  
DEFAULT_RISK_LEVEL=0.02
MAX_CONCURRENT_TRADES=5
PAPER_TRADING=true

# Compliance and Logging
LOG_LEVEL=INFO
AUDIT_LOG_RETENTION_DAYS=365
ENABLE_AI_DECISION_LOGGING=true

# Feature Flags
ENABLE_HYBRID_AI=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TECHNICAL_ANALYSIS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000